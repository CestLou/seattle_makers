<!DOCTYPE html>
<html>

<head>
  <title>SeattleMakers</title>
  <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Oswald:400,300' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Amatic+SC:700' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=IM+Fell+Double+Pica' rel='stylesheet' type='text/css'>
  <script src='https://code.jquery.com/jquery-2.1.1.min.js'></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'animate', media: 'all', 'data-turbolinks-track' => true %>
  <script src='https://platform.venmo.com/sdk.js'></script>
  <%= csrf_meta_tags %>
</head>

<% if @current_user %>
<a href="<%= @auth_link %>">Authenticate</a>

  <body>
    <div class="wrapper">

      <!-- Nav Bar-->
      <nav class="navbar" role="navigation">
        <div class="container">
          <nav class="navbar-header" >
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div class="navbar-collapse collapse" style="height: 1px;margin: auto;text-align: center;">
            <ul class="nav navbar-nav">
              <li>
                <form class="navbar-form navbar-left" role="search">
                  <!-- <div class="form-group">
                    <input type="text" class="form-control search-nav" placeholder="Discover Events">
                  </div> -->
                  <div class="btn-group">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                      Search Categories <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                      <% @category_all.each do |c| %>
                      <li><%= link_to c.name, category_path(c.id) %></a></li>
                      <% end %>
                    </ul>
                  </div>
                  <!-- <button type="submit" class="btn btn-nav">Submit</button> -->
                </form>
              </li>
              <li class='nav-logo'><%= link_to image_tag("header_logo_lightbrown.gif"),  root_path  %></li>
              <li class='nav-user'><span class='glyphicon glyphicon-user' id='nav-user-glyph'></span><span id='nav-user-link'> &nbsp;&nbsp;<%= link_to  @current_user.name.upcase, user_path(@current_user) %></span></li>
              <li class="dropdown nav-user">
                <a href="#" class="dropdown-toggle nav-item" data-toggle="dropdown"><span class="glyphicon glyphicon-align-justify pull-right"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'ABOUT', about_path %></li>
                  <li><%= link_to 'DISCOVER', discover_path %></li>
                  <li><%= link_to 'NEW EVENT', new_event_path %></li>
                  <li><a href="/logout">SIGN OUT<span class="glyphicon glyphicon-log-out pull-right"></span></a></li>
                </ul>
              </li>
            </ul>
          </div>
        </nav>
      </nav>

      <!-- Page Content -->
        <%= yield %>
      <!-- End Page Content -->

      <footer>
        <div class="col-md-12 col-sm-12">
          <div class="copyright col-md-3 col-sm-3">
            <p>Copyright &copy 2015</p>
          </div>
          <div class="glyph col-md-3 col-sm-3 col-md-offset-2 col-sm-offset-3">
            <a href="https://github.com/CestLou/seattle_makers"><i class="fa fa-github fa-3x"></i></a>
            <a href="#"><i class="fa fa-facebook-square fa-3x"></i></a>
            <a href="#"><i class="fa fa-instagram fa-3x"></i></a>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>

<% else %>

  <body>
    <div class="wrapper">
      <!-- Nav Bar-->
      <nav class="navbar" role="navigation">
        <div class="container">
          <nav class="navbar-header" >
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div class="navbar-collapse collapse" style="height: 1px;margin: auto;text-align: center;">
            <ul class="nav navbar-nav">
              <li class='nav-item'><%= link_to 'ABOUT', about_path %></li>
              <li class='nav-item'><%= link_to 'DISCOVER', discover_path %></a></li>
              <li class='nav-logo'><%= link_to image_tag("header_logo_lightbrown.gif"),  root_path  %></li>
              <li class='nav-item'><%= link_to 'LOGIN', login_path %></a></li></li>
              <li class='nav-item'><%= link_to 'SIGNUP', signup_path %></a></li></li>
            </ul>
          </div>
        </nav>
      </nav>

    <!-- Page Content -->
      <!-- <div class='col-md-4 col-sm-4 col-md-offset-4'>
        <div class='error-msg text-center'>
          <%= render "shared/flash" %>
        </div>
      </div> -->
      <%= yield %>
    <!-- End Page Content -->
      <footer>
        <div class="col-md-12 col-sm-12">
          <div class="copyright col-md-3 col-sm-3">
            <p>Copyright &copy 2015</p>
          </div>
          <div class="glyph col-md-3 col-sm-3 col-md-offset-2 col-sm-offset-3">
            <a href="https://github.com/CestLou/seattle_makers"><i class="fa fa-github fa-3x"></i></a>
            <a href="#"><i class="fa fa-facebook-square fa-3x"></i></a>
            <a href="#"><i class="fa fa-instagram fa-3x"></i></a>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>

<% end %>


