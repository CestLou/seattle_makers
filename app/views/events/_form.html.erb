<div class="row">
    <div class="col-md-4">
    <%= @event.inspect %>
        <%= bootstrap_form_for @event do |f| %>
        <div class="form-group">
            <%= f.text_field :title, placeholder: 'Enter Event Title' %>
        </div>
        <div class="form-group">
            <%= f.text_area :desc, placeholder: 'Enter Event Description' %>
        </div>
        <div>
            <%= f.text_field :capacity, placeholder: 'Event Capacity' %>
        </div>
        <%= f.submit 'Submit', class: 'btn btn-success' %>
        <% end %>
    </div>
</div>