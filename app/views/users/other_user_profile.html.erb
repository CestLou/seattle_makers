
<h1 style="text-align:center"><%= @user.name%>'s Public Profile</h1>

<br> <br>

<div class='row'>
  <div class='col-xs-5 col-md-4 col-xs-offset-4 col-md-offset-2'>
      <p> <img style="width:180px" src = 'https://d13yacurqjgara.cloudfront.net/users/312581/screenshots/1676038/female-placeholder_1x.png'></p>
      <p> <strong>Name:</strong>
        <%= @user.name %></p>
        <p> <strong>Email:</strong>
          <%= @user.email %> </p>
        </div>
        <div class='col-xs-5 col-md-4 col-xs-offset-4 col-md-offset-1'>
         <h4> <%= @user.name%>'s Events: </h4>
          <% @user.events.each do |event| %>
          <p><img style="width:180px" src = "<%=asset_path "placeholder.png"%>">
           <%= link_to event.title, event_path(event) %></p>
          <% end %>
        </div>
      </div>
    </div>
