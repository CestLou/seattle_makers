<div class='col-md-6 col-md-offset-3'>
  <div class='error-msg text-center'>
    <%= render "shared/flash" %>
  </div>
</div>


<div class='container main-container'>
  <h1 style="text-align:center">My Profile</h1>
  <br>
  <br>
  <div style='text-align:center'class='row'>
      <div class='col-xs-10 col-md-10 col-xs-offset-1 col-md-offset-1'>
        <div class='col-xs-6 col-md-6'>
        <%= link_to 'Edit Profile', edit_user_path, :class=>'btn btn-primary' %>
        <br>
        <% if @user.uid.blank?%>
          <img id ="placeholder" src = "<%=asset_path "person-placeholder.png"%>">
          <p> <a href="/auth/facebook">Get Profile Photo from Facebook</a></p>
        <% else %>
        <img style="width:180px" src = "http://graph.facebook.com/<%= @user.uid %>/picture?type=large">
        <% end %>
        <br>
        <br>
        <br>
        <p> <strong>Name:</strong>
          <%= @user.name %>
        </p>
        <p> <strong>Email:</strong>
          <%= @user.email %>
        </p>
        <p> <strong>Available Credits:</strong>
          <%= @user.tickets.count %>
        </p>
      </div>
      <div class='col-xs-6 col-md-6'>
        <img src="<%= @piechart %>">
      </div>
    </div>
  </div>
  <br>
  <br>

      <h4 style="text-align:center"> <strong>Upcoming Events I'm Hosting</strong></h4>
       <% @user.events.each do |event| %>
        <% if event.date > Date.today%>
          <img style="width:180px" src = "<%=asset_path "placeholder.png"%>">
          <span><%= link_to event.title, event_path(event) %></span>
        <% elsif event.date == Date.today %>
          <%if event.time.strftime("%l:%M %P") >= Time.now.strftime("%l:%M %P")%>
          <img style="width:180px" src = "<%=asset_path "placeholder.png"%>">
          <span><%= link_to event.title, event_path(event) %></span>
           <% end %>
        <% end %>
       <% end %>


    <br> <br>

    <h4 style="text-align:center"> <strong>Past Events I Hosted</strong></h4>
      <% @user.events.each do |event| %>
        <% if event.date < Date.today%>
          <img style="width:180px" src = "<%=asset_path "placeholder.png"%>">
          <span><%= link_to event.title, event_path(event) %></span>
        <% elsif event.date == Date.today %>
          <% if event.time.strftime("%l:%M %P") < Time.now.strftime("%l:%M %P")%>
          <img style="width:180px" src = "<%=asset_path "placeholder.png"%>">
          <span><%= link_to event.title, event_path(event) %></span>
          <% end %>
        <% end %>
      <% end %>

    <br> <br>

    <h4 style="text-align:center"> <strong>Upcoming Events I'm Attending</strong></h4>
      <% @user.attending.each do |event| %>
        <% if event.date > Date.today%>
          <img style="width:180px" src = "<%=asset_path "placeholder.png"%>">
          <span><%= link_to event.title, event_path(event) %></span>
        <% elsif event.date == Date.today %>
          <%if event.time.strftime("%l:%M %P") >= Time.now.strftime("%l:%M %P")%>
          <img style="width:180px" src = "<%=asset_path "placeholder.png"%>">
          <span><%= link_to event.title, event_path(event) %></span>
          <% end %>
        <% end %>
      <% end %>

    <br> <br>

    <h4 style="text-align:center"> <strong>Past Events I Attended</strong></h4>
      <% @user.attending.each do |event| %>
        <% if event.date < Date.today%>
          <img style="width:180px" src = "<%=asset_path "placeholder.png"%>">
          <span><%= link_to event.title, event_path(event) %></span>
         <% elsif event.date == Date.today %>
          <% if event.time.strftime("%l:%M %P") < Time.now.strftime("%l:%M %P")%>
          <img style="width:180px" src = "<%=asset_path "placeholder.png"%>">
          <span><%= link_to event.title, event_path(event) %></span>
          <% end %>
        <% end %>
      <% end %>

</div>
