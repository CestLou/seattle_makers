<h1 style="text-align:center"><%= @user.name%>'s Personal Profile</h1>

<div style='text-align:center'class='row'>
  <div class='col-xs-5 col-md-4 col-xs-offset-4 col-md-offset-4'>
<%= link_to 'Edit Profile', edit_user_path, :class=>'btn btn-primary' %>
 <p> <img style="width:180px" src = 'https://d13yacurqjgara.cloudfront.net/users/312581/screenshots/1676038/female-placeholder_1x.png'></p>
<p><%= link_to 'Upload New Photo', 'http://www.facebook.com' %></p>
<br>
<p> <strong>Name:</strong>
<%= @user.name %>
</p>
<p> <strong>Email:</strong>
<%= @user.email %>
</p>
</div>
</div>
<br><br>

 <div class='col-xs-5 col-md-6' 'images'>
         <h4 style="text-align:center"> <strong>Events I'm Hosting</strong></h4>
          <% @user.events.each do |event| %>
          <div class ="image">
          <img src = "<%=asset_path "placeholder.png"%>">
          <div class="title"><%= link_to event.title, event_path(event) %></div></div>
          <% end %>
</div>

 <div class='col-xs-5 col-md-6' 'images'>
         <h4 style="text-align:center"> <strong>Events I'm Attending</strong></h4>
          <% @user.attending.each do |event| %>
          <div class ="image">
          <img src = "<%=asset_path "placeholder.png"%>">
          <div class="title"><%= link_to event.title, event_path(event) %></div></div>
          <% end %>
</div>
